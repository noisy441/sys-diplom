            animation-name: twinkle;
            animation-timing-function: cubic-bezier(.2,.65,.45,.95);
            animation-iteration-count: infinite;
            will-change: transform, opacity;
        }
        
        @keyframes twinkle {
            0%, 100% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.2); opacity: 0.7; }
        }
        
        .star:nth-child(1) { top: calc(var(--random-y)); left: calc(var(--random-x)); animation-duration: 3s; animation-delay: 0s; }
        .star:nth-child(2) { top: calc(var(--random-y)); left: calc(var(--random-x)); animation-duration: 4s; animation-delay: 1s; }
        .star:nth-child(3) { top: calc(var(--random-y)); left: calc(var(--random-x)); animation-duration: 5s; animation-delay: 2s; }
        
        .container {
